<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.jarettmillard.codesample.api.models.Movie" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginEnd="@dimen/padding"
            android:background="#ddd"
            android:scaleType="centerCrop"
            app:imageUrl="@{movie.poster()}"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/padding"
            android:text="@{`#` + String.valueOf(movie.rank())}"
            tools:text="1" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image"
            android:layout_toStartOf="@id/rank"
            android:text="@{movie.title()}"
            android:textSize="18sp"
            tools:text="Movie McMoveieface" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/title"
            android:layout_toEndOf="@id/image"
            android:text="@{@string/rating(movie.imdbRating(), movie.imdbVotes())}"
            tools:text="Rating: 9.0 (12345 votes)" />

        <TextView
            android:id="@+id/link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/rating"
            android:layout_toEndOf="@id/image"
            android:text="@{movie.imdbLink()}" />
    </RelativeLayout>
</layout>
